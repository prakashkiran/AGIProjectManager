<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pink"
    tools:context="com.example.welcome.agiprojectmanager.Registration">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="126dp"
        tools:layout_editor_absoluteY="-1dp"
        android:id="@+id/textView"

        android:layout_centerHorizontal="true" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/nfi"
        android:textColorHint="@color/colorAccent"
        >

        <EditText
            android:id="@+id/nf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/colorAccent"
            android:hint="Name"
            android:inputType="textPersonName"
             />
    </android.support.design.widget.TextInputLayout>
   <android.support.design.widget.TextInputLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/nfi"
       android:id="@+id/clfi"
       android:textColorHint="@color/colorAccent"
       android:layout_alignParentStart="true">
       <EditText
           android:id="@+id/clf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
           android:hint="College"
           android:inputType="text"
           android:backgroundTint="@color/colorAccent"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clfi"
        android:textColorHint="@color/colorAccent"
        android:id="@+id/bfi">
        <EditText
            android:id="@+id/bf"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Branch"
            android:inputType="text"

            android:backgroundTint="@color/colorAccent"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bfi"
        android:textColorHint="@color/colorAccent"
        android:id="@+id/efi">
        <EditText
            android:id="@+id/ef"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email"
            android:backgroundTint="@color/colorAccent"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pfi"
        android:layout_below="@id/efi"
        android:textColorHint="@color/colorAccent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pf"
            android:hint="Password"
            android:textColor="@color/colorAccent"
             android:inputType="numberPassword" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pfi"
        android:id="@+id/cpf1"
        android:textColorHint="@color/colorAccent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cpf"
            android:hint="Confirm Password"
            android:inputType="numberPassword"
            android:textColorHint="@color/colorAccent"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpf1"
        android:id="@+id/sfi"
        android:textColorHint="@color/colorAccent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sf"
            android:inputType="text"
            android:hint="State"
            android:textColorHint="@color/colorAccent"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorAccent"
        android:layout_below="@+id/sfi"
        android:id="@+id/cifi">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cif"
            android:hint="City"

            android:textColorHint="@color/colorAccent"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pofi"
        android:layout_below="@id/cifi"
        android:textColorHint="@color/colorAccent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/pof"
            android:hint="Postal Code"
            android:textColorHint="@color/colorAccent"
            android:backgroundTint="@color/colorAccent"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/btfi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/pofi"
        android:background="@drawable/shape"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/colorAccent"/>
</RelativeLayout>
</ScrollView>


</RelativeLayout>
